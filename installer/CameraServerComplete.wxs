<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Camera Server Qt6" 
           Language="1033" 
           Version="1.0.0.0" 
           Manufacturer="Camera Server Solutions" 
           UpgradeCode="A1B2C3D4-E5F6-7890-ABCD-123456789ABC">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" 
             Platform="x64"
             Description="Camera Server Qt6 - IP Camera Port Forwarding Application with Firewall Auto-Configuration" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <!-- Custom properties for user choice -->
    <Property Id="CONFIGURE_FIREWALL" Value="1" />

    <!-- Feature definition -->
    <Feature Id="ProductFeature" Title="Camera Server Qt6 Application" Level="1">
      <ComponentGroupRef Id="HarvestedFiles" />
      <ComponentRef Id="DesktopShortcut" />
      <ComponentRef Id="ProgramMenuShortcuts" />
      <ComponentRef Id="FirewallScripts" />
    </Feature>

    <!-- Directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="Camera Server Qt6" />
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop" />
      <Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ApplicationProgramsFolder" Name="Camera Server Qt6" />
      </Directory>
    </Directory>

    <!-- Firewall scripts component -->
    <Component Id="FirewallScripts" Directory="INSTALLFOLDER" Guid="A1B2C3D4-E5F6-7890-ABCD-333333333333">
      <File Id="SetupFirewallScript" 
            Source="$(var.SourceDir)\installer\setup_firewall.bat" 
            Name="setup_firewall.bat" />
      <File Id="RemoveFirewallScript" 
            Source="$(var.SourceDir)\installer\remove_firewall.bat" 
            Name="remove_firewall.bat" />
    </Component>

    <!-- Desktop shortcut -->
    <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="A1B2C3D4-E5F6-7890-ABCD-111111111111">
      <Shortcut Id="DesktopShortcut"
                Name="Camera Server Qt6"
                Description="Camera Server Qt6 - IP Camera Port Forwarding with WireGuard VPN"
                Target="[INSTALLFOLDER]ViscoConnect.exe"
                WorkingDirectory="INSTALLFOLDER" />
      <RemoveFolder Id="DesktopFolder" On="uninstall" />
      <RegistryValue Root="HKCU" 
                     Key="Software\CameraServerQt6" 
                     Name="DesktopShortcut" 
                     Type="integer" 
                     Value="1" 
                     KeyPath="yes" />
    </Component>

    <!-- Program menu shortcuts -->
    <Component Id="ProgramMenuShortcuts" Directory="ApplicationProgramsFolder" Guid="A1B2C3D4-E5F6-7890-ABCD-222222222222">
      <Shortcut Id="ApplicationStartMenuShortcut"
                Name="Camera Server Qt6"
                Description="Camera Server Qt6 - IP Camera Port Forwarding with WireGuard VPN"
                Target="[INSTALLFOLDER]ViscoConnect.exe"
                WorkingDirectory="INSTALLFOLDER" />
      <Shortcut Id="FirewallSetupShortcut"
                Name="Setup Firewall Rules"
                Description="Configure Windows Firewall for Camera Server Qt6"
                Target="[INSTALLFOLDER]setup_firewall.bat" />
      <Shortcut Id="FirewallRemoveShortcut"
                Name="Remove Firewall Rules"
                Description="Remove Windows Firewall rules for Camera Server Qt6"
                Target="[INSTALLFOLDER]remove_firewall.bat" />
      <Shortcut Id="UninstallProduct"
                Name="Uninstall Camera Server Qt6"
                Target="[SystemFolder]msiexec.exe"
                Arguments="/x [ProductCode]"
                Description="Uninstalls Camera Server Qt6" />
      <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
      <RegistryValue Root="HKCU" 
                     Key="Software\CameraServerQt6" 
                     Name="ProgramMenuShortcut" 
                     Type="integer" 
                     Value="1" 
                     KeyPath="yes" />
    </Component>

    <!-- Custom Actions for Firewall -->
    <CustomAction Id="ConfigureFirewallPrompt"
                  ExeCommand="[INSTALLFOLDER]setup_firewall.bat"
                  Execute="immediate"
                  Return="ignore" />

    <CustomAction Id="CleanupFirewallRules"
                  ExeCommand="[INSTALLFOLDER]remove_firewall.bat"
                  Execute="immediate"
                  Return="ignore" />

    <!-- Installation sequence -->
    <InstallExecuteSequence>
      <!-- Show firewall configuration dialog after install -->
      <Custom Action="ConfigureFirewallPrompt" After="InstallFinalize">
        NOT Installed AND CONFIGURE_FIREWALL="1"
      </Custom>
      <!-- Remove firewall rules on uninstall -->
      <Custom Action="CleanupFirewallRules" Before="RemoveFiles">
        REMOVE="ALL"
      </Custom>
    </InstallExecuteSequence>

    <!-- UI for installation -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <WixVariable Id="WixUILicenseRtf" Value="$(var.SourceDir)\installer\License.rtf" />

    <!-- Custom UI for firewall configuration -->
    <UI>
      <Dialog Id="FirewallConfigDlg" Width="370" Height="270" Title="Windows Firewall Configuration">
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Firewall Configuration" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="320" Height="60" Transparent="yes" NoPrefix="yes" Text="Camera Server Qt6 requires specific Windows Firewall rules for proper operation with WireGuard VPN:&#xD;&#xA;&#xD;&#xA;• TCP port 7777 - Echo Server functionality&#xD;&#xA;• ICMP Echo Request - Ping response capability" />
        <Control Id="ConfigureCheckbox" Type="CheckBox" X="25" Y="90" Width="320" Height="17" Property="CONFIGURE_FIREWALL" CheckBoxValue="1" Text="Automatically configure Windows Firewall rules after installation" />
        <Control Id="ManualNote" Type="Text" X="25" Y="115" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="Note: You can manually configure firewall rules later using the shortcuts in the Start Menu or by running setup_firewall.bat as Administrator." />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
          <Publish Event="NewDialog" Value="InstallDirDlg">1</Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Publish Event="NewDialog" Value="VerifyReadyDlg">1</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
      </Dialog>

      <InstallUISequence>
        <Show Dialog="FirewallConfigDlg" Before="VerifyReadyDlg">NOT Installed</Show>
      </InstallUISequence>
    </UI>

  </Product>
</Wix>
